{
  "compileOnSave": false,
  "compilerOptions": {
     "target": "es2017",
     "outDir": "dist",
     "noEmitOnError": true,
     "noImplicitAny": false,
     "removeComments": true,
     "strictNullChecks": true,
     "experimentalDecorators": true,
     "module": "commonjs",
     "types": ["node"],
     "esModuleInterop": true
  },
  "include": ["app/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}